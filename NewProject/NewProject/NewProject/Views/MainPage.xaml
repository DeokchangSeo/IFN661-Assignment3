<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewProject.Views.MainPage"
  Title="Rice Growing Advisor"
             
             Padding="10, 10, 10, 10" >
  
  <Grid  >
    
    <Label Text="Rice Growing Advisor"
           FontSize="20"
           XAlign="Start"
           VerticalOptions="Start" />

    <Button Text="Farmer"
        HorizontalOptions="Start"
            VerticalOptions="Center"
  Clicked="OnButtonClick1"/>
  
<Button Text="Advisor"
    HorizontalOptions="Center"   
        VerticalOptions="Center"
  Clicked="OnButtonClick2"/>
    
  <Button Text="Fertilizer"
      HorizontalOptions="End"
          VerticalOptions="Center"
  Clicked="OnButtonClick3"/>
  </Grid>

</ContentPage>